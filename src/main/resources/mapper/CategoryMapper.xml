<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kgc.dao.category.CategoryMapper">
    <select id="selectCategoryByParentId" resultType="category">
        select * from category where parentId = #{parentId}
    </select>
    <select id="selectAll" resultType="category">
        select * from category
    </select>
    <insert id="addStudent" >
        insert into student (id, studentNo,studentName,sGender) values(#{id}, #{studentNo},#{studentName},#{sGender})
    </insert>
    <delete id="deleteStudent" >
        delete from student where id = #{id}
    </delete>
    <update id="updateStudent" >
        update student set studentNo = #{studentNo},studentName = #{studentName} where id = #{id}
    </update>
</mapper>